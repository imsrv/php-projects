  <tr> 
    <td colspan="4"> 
      <div align="center"> 
        <table width="482" border="0" cellpadding="0" cellspacing="0">
          <tr> 
            <td> 
              {usernav}
            </td>
          </tr>
          <tr> 
            <td> 
              <div align="right"><font size="1" face="Verdana, Arial, Helvetica, sans-serif"> 
                <a href="{mainfile}?do=logout&lang={lang}"><font color="#666666">%logout%, 
