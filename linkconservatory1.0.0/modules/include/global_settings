<?

	/*
	** PHP front-ends
	*/
	$IndexScript = "index.php3";
	$LocationScript = "location.php3";

	/*
	** Change these values to define the MySQL database
	** where conservatory tables are located
	*/
	$DatabaseServer = "localhost"; 
	$DatabaseUser = "httpd"; 
	$DatabasePassword = "";
	$DatabaseName = "conservatory";

	/*
	** Mailing list
	** New links added by admins will be announced to MailingList_Add
	** Subscription requests will be sent to MailingList_Requests
	** MailingList_Name is used in forming requests
	*/
	$MailingList_Add = "conservatory@your-server.com";
	$MailingList_Requests = "requests@your-server.com";
	$MailingList_Name = "conservatory";

	/*
	** Part of the URL used to get to the application, for example:
	** http://conservatory.your-server.com/index.php3
	** would set
	** conservatory.your-server.com
	*/	
	$SiteURL = "conservatory.your-server.com";
	
	
	/*
	** LinkCheckDepth is how many links are checked when
	** linkcheck screen checks for stale links
	** LinkCheckAdmin is the email address that receives
	** reports generated by the link checker
	*/
	$LinkCheckDepth = 200;
	$LinkCheckAdmin = "you@your-server.com";

	/*
	** These variables are used in the ALT tags of the layout graphics
	*/	
	$link_definition = "link -- a connecting element or factor";
	$conservatory_definition = "con·ser·va·to·ry -- a school specializing in one of the fine arts";

	/*
	** This string will be used for font face in titles
	*/
	$SiteFont = "helvetica, arial";


	/* 
	** Allow admins based on domain name
	** substitute your domain to allow
	** admin abilities for any surfers from
	** a particular domain.  Otherwise, delete
	** this code. 
	*/
	if(ereg("^127.0.0.", $REMOTE_ADDR))
	{
		$Browser_Admin = "YES";
	}
	else
	{
		$Browser_Admin = "NO";
	}

	/* 
	** If the user has identified himself through HTTP
	** authenication, then we assume he is an admin 
	*/
	if($REMOTE_USER != "") 
	{
		$Browser_Admin = "YES";
	}


	/*
	** Determine browser capabilities
	*/
	$Browser_Name = strtok($HTTP_USER_AGENT, "/");
	$Browser_Version = strtok(" ");
	
	if(ereg("MSIE", $HTTP_USER_AGENT))
	{
		$Browser_Name = "MSIE";
		
		$Browser_Version = strtok("MSIE"); /*get junk*/
		$Browser_Version = strtok(" ");
		$Browser_Version = strtok(";");
	}

	$Browser_Platform = "unknown";
	if(ereg("Windows",$HTTP_USER_AGENT) || 
		ereg("WinNT",$HTTP_USER_AGENT) ||
		ereg("Win98",$HTTP_USER_AGENT) ||
		ereg("Win95",$HTTP_USER_AGENT))
	{
		$Browser_Platform = "Windows";
	}
	if(ereg("Mac", $HTTP_USER_AGENT))
	{
		$Browser_Platform = "Macintosh";
	}

	$Browser_JavaScriptOK = 0;

	if(($Browser_Platform == "Windows"))
	{
		if($Browser_Name == "Mozilla")
		{
			if($Browser_Version >= 3.0)
			{
				$Browser_JavaScriptOK = 1;
			}		
			if($Browser_Version >= 4.0)
			{
				$Browser_CSSOK = 1;
			}
		}
		else /* must be MSIE */
		{
			if($Browser_Version >= 4.0)
			{
				$Browser_JavaScriptOK = 1;
				$Browser_CSSOK = 1;
			}		
		}
	}
	else /* must be mac */
	{
		if($Browser_Name == "Mozilla")
		{
			if($Browser_Version >= 3.0)
			{
				$Browser_JavaScriptOK = 1;
			}		
			if($Browser_Version >= 4.0)
			{
				$Browser_CSSOK = 1;
			}
		}
		else /* must be MSIE */
		{
			if($Browser_Version >= 4.0)
			{
				$Browser_JavaScriptOK = 1;
				$Browser_CSSOK = 1;
			}		
		}
	}


	/*
	** This function dresses text to be a title based on
	** browser capability (CSS or FONT tag)
	*/
	function doTitleDressing($inputText)
	{
		global $Browser_CSSOK;
		global $SiteFont;

		if($Browser_CSSOK==1)
		{
			$returnText = "<DIV ID=\"TitleDressing\">$inputText</DIV>";
		}
		else
		{
			$returnText = "<FONT FACE=\"$SiteFont\"><B>$inputText</B></FONT>";
		}

		return ($returnText);
	}

?>
