<table width=100% align="center">
  <tr>
    <td class="headline" align="center">JOIN TEAM</td>
  </tr>
</table>

<form method=POST>
 <table width=100% align="center" class="news">
  {ERRORS}
  <tr class="row">
   <td>
    Enter in the team {TEAM_NAME}'s Join Password. If it is correct, you will join the team.
   </td>
  </tr>
  <tr class="rowoff">
   <td>
    Team Password: <input type="password" maxlength="6556" size="32" name="{FIELD_PASS}">
   </td>
  </tr>
  <tr class="row">
   <td align="center">
    <input type="submit" name="submit" value="Submit">
   </td>
  </tr>
 </table>
</form>